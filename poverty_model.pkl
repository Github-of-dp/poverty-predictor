nt to predict (y)\n","X = df[['income_usd', 'family_size', 'education_level', 'is_rural']]\n","y = df['poverty_risk']\n","\n","# 2. Split into training and testing data\n","X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.2)\n","\n","# 3. Create and Train the model\n","model = LogisticRegression()\n","model.fit(X_train, y_train)\n","\n","# 4. Save the \"Brain\" as a file\n","joblib.dump(model, 'poverty_model.pkl')\n","\n","print(\"AI Model Trained and Saved as 'poverty_model.pkl'!\")"],"metadata":{"id":"pU7ttpasuBdM"},"execution_count":null,"outputs":[]}]}